{
  "name": "modern-flexible",
  "version": "0.0.6",
  "packageManager": "pnpm@8.7.6",
  "description": "现代多设备伸缩布局方案",
  "type": "module",
  "keywords": [
    "flexiblejs",
    "responsive",
    "flexible"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hemengke1997/modern-flexible.git"
  },
  "author": "hemengke <https://github.com/hemengke1997>",
  "files": [
    "CHANGELOG.md",
    "README.md",
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "simple-git-hooks && tsup --watch",
    "build": "tsup",
    "build:pages": "pnpm run build && cd playground/spa && pnpm run build",
    "test:watch": "vitest",
    "test": "run-s test:unit test:serve test:build",
    "test:unit": "vitest run",
    "test:serve": "vitest run -c vitest.config.e2e.ts",
    "test:build": "cross-env VITE_TEST_BUILD=1 vitest run -c vitest.config.e2e.ts",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "up": "taze -I -w -r",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "bump": "bumpp package.json -c -p -t --all -x \"pnpm run changelog\""
  },
  "dependencies": {
    "throttle-debounce": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@minko-fe/commitlint-config": "^2.0.5",
    "@minko-fe/eslint-config": "^2.0.5",
    "@minko-fe/tsconfig": "^2.0.5",
    "@types/debug": "^4.1.9",
    "@types/fs-extra": "^11.0.2",
    "@types/node": "^20.8.6",
    "@types/throttle-debounce": "^5.0.0",
    "bumpp": "^9.2.0",
    "conventional-changelog-cli": "^4.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.51.0",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.11.4",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vitest": "^0.34.5",
    "vitest-e2e": "^0.0.8"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm exec commitlint -e"
  }
}
